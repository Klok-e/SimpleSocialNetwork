  "components": {
    "schemas": {
      "CredentialsModel": {
        "required": [
          "login",
          "password"
        ],
        "type": "object",
        "properties": {
          "login": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UserModel": {
        "required": [
          "isAdmin",
          "isDeleted",
          "login"
        ],
        "type": "object",
        "properties": {
          "login": {
            "type": "string"
          },
          "about": {
            "type": "string",
            "nullable": true
          },
          "dateBirth": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "isDeleted": {
            "type": "boolean"
          },
          "isAdmin": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "LoggedInUser": {
        "required": [
          "login",
          "role",
          "token"
        ],
        "type": "object",
        "properties": {
          "login": {
            "type": "string"
          },
          "token": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CreateCommentModel": {
        "required": [
          "content",
          "opId"
        ],
        "type": "object",
        "properties": {
          "opId": {
            "type": "integer",
            "format": "int32"
          },
          "content": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CommentKeyModel": {
        "required": [
          "messageId",
          "opId"
        ],
        "type": "object",
        "properties": {
          "opId": {
            "type": "integer",
            "format": "int32"
          },
          "messageId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "VoteType": {
        "enum": [
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "VoteComment": {
        "required": [
          "commentId",
          "voteType"
        ],
        "type": "object",
        "properties": {
          "commentId": {
            "$ref": "#/components/schemas/CommentKeyModel"
          },
          "voteType": {
            "$ref": "#/components/schemas/VoteType"
          }
        },
        "additionalProperties": false
      },
      "CreateOpMessageModel": {
        "required": [
          "content",
          "tags",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "OpMessageModel": {
        "required": [
          "content",
          "id",
          "isDeleted",
          "points",
          "sendDate",
          "title"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "posterId": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "points": {
            "type": "integer",
            "format": "int32"
          },
          "isDeleted": {
            "type": "boolean"
          },
          "sendDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "CommentModel": {
        "required": [
          "content",
          "isDeleted",
          "messageId",
          "opId",
          "points",
          "sendDate"
        ],
        "type": "object",
        "properties": {
          "opId": {
            "type": "integer",
            "format": "int32"
