            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VoteComment"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/VoteComment"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/VoteComment"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/OpMessage": {
      "post": {
        "tags": [
          "OpMessage"
        ],
        "summary": "Create a new post using provided data",
        "requestBody": {
          "description": "Post data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOpMessageModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOpMessageModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOpMessageModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "OpMessage"
        ],
        "summary": "Get a page of posts",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page",
            "schema": {
              "type": "integer",
              "description": "Page",
              "format": "int32",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OpMessageModel"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "OpMessage"
        ],
        "summary": "Delete the specifid post",
        "parameters": [
          {
            "name": "postId",
            "in": "query",
            "description": "Id of a post",
            "required": true,
            "schema": {
              "type": "integer",
              "description": "Id of a post",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/OpMessage/{id}": {
      "get": {
        "tags": [
          "OpMessage"
        ],
        "summary": "Get a post model with the specified id",
        "parameters": [
          {
            "name": "id",
