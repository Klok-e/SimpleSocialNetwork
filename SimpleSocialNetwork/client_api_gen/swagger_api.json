              "schema": {
                "$ref": "#/components/schemas/ChangeUserInfo"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ChangeUserInfo"
              }
            },
            "application/*+json": {
              "schema": {
