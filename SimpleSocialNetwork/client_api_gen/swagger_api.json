            "required": true,
            "schema": {
              "type": "integer",
              "description": "Post id",
              "format": "int32"
            }
          },
          {
            "name": "page",
            "in": "path",
            "description": "Page",
            "required": true,
            "schema": {
              "type": "integer",
              "description": "Page",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CommentModel"
                  }
                }
              }
            }
          }
