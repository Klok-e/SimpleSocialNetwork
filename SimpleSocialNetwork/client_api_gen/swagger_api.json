                "$ref": "#/components/schemas/CreateCommentModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCommentModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCommentModel"
              }
            }
