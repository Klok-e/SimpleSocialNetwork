      }
    },
    "/api/OpMessage/exists/{postId}": {
      "get": {
        "tags": [
          "OpMessage"
        ],
        "summary": "Check whether the specified post exists",
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "description": "Id of a post",
            "required": true,
            "schema": {
              "type": "integer",
              "description": "Id of a post",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "/api/OpMessage/vote": {
      "post": {
        "tags": [
