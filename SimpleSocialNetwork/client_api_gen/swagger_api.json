{
  "openapi": "3.0.1",
  "info": {
    "title": "SimpleSocialNetworkBack",
    "version": "1.0"
  },
  "paths": {
    "/api/Auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "description": "User credentials that will be used on login",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login into an account using provided credentials",
        "requestBody": {
          "description": "User credentials",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsModel"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoggedInUser"
                }
              }
            }
          }
        }
      }
    },
    "/api/Comment": {
      "post": {
        "tags": [
          "Comment"
        ],
        "summary": "Create a new comment in specified post",
        "requestBody": {
          "description": "Comment data",
          "content": {
